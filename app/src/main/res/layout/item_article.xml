<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ivNewsImg"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvNewsHeading"
        android:layout_weight="1"
        android:outlineAmbientShadowColor="@color/black"
        android:src="@drawable/stock_photo"
        android:contentDescription="Some stock photo"
        />
    <TextView
        android:id="@+id/tvNewsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivNewsImg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        tools:text="Some heading"
        android:textSize="30sp"
        android:layout_weight="1"
        android:ellipsize="none"
        android:maxLines="100"
        android:scrollHorizontally="false"
    />
    <TextView
        android:id="@+id/tvNewsSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNewsHeading"
        app:layout_constraintLeft_toRightOf="@id/ivNewsImg"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        android:layout_marginStart="16dp"
        tools:text="Source name"
    />
    <ImageButton
        android:id="@+id/ibLikeNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewsHeading"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        android:background="#fffff"
        android:contentDescription="save news article button"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivNewsImg"
        />


</androidx.constraintlayout.widget.ConstraintLayout>