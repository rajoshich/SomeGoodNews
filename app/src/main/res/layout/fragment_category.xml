<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_category"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding16">
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/categories"
            android:paddingBottom="@dimen/padding20"
            android:textColor="@color/black"
            android:textSize="@dimen/text20"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryTitle">

            <GridLayout
                android:id="@+id/category1"
                android:layout_width="@dimen/catWidth"
                android:layout_height="@dimen/catHeight"
                android:columnCount="1"
                android:rowCount="2">
                <ImageView
                    android:layout_width="@dimen/catWidth"
                    android:layout_height="@dimen/catWidth"
                    android:background="@drawable/holding_hands"
                    android:contentDescription="@string/humans_being_bros"/>
                <TextView
                    android:text="@string/humans_being_bros"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </GridLayout>

            <GridLayout
                android:id="@+id/category2"
                android:layout_width="@dimen/catWidth"
                android:layout_height="@dimen/catHeight"
                android:columnCount="1"
                android:rowCount="2"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/size140"
                    android:layout_height="@dimen/size140"
                    android:layout_marginLeft="@dimen/padding10"
                    android:layout_marginTop="@dimen/padding10"
                    android:background="@drawable/cute"
                    android:contentDescription="@string/aww"/>
                <TextView
                    android:text="@string/aww"
                    android:layout_marginTop="@dimen/padding5"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </GridLayout>

            <GridLayout
                android:id="@+id/category3"
                android:layout_width="@dimen/catWidth"
                android:layout_height="@dimen/catHeight"
                android:columnCount="1"
                android:rowCount="2"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/size140"
                    android:layout_height="@dimen/size140"
                    android:layout_marginLeft="@dimen/padding10"
                    android:layout_marginTop="@dimen/padding10"
                    android:background="@drawable/virus"
                    android:contentDescription="@string/covid_19"/>
                <TextView
                    android:text="@string/covid_19"
                    android:layout_marginTop="@dimen/padding5"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </GridLayout>

            <GridLayout
                android:id="@+id/category4"
                android:layout_width="@dimen/catWidth"
                android:layout_height="@dimen/catHeight"
                android:columnCount="1"
                android:rowCount="2"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/size120"
                    android:layout_height="@dimen/size120"
                    android:layout_marginLeft="@dimen/padding20"
                    android:layout_marginTop="@dimen/padding20"
                    android:background="@drawable/news"
                    android:contentDescription="@string/other"/>
                <TextView
                    android:text="@string/other"
                    android:layout_marginTop="@dimen/padding10"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>
            </GridLayout>

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>